@startuml Multiplayer Tetris Game Online - Simplified Architecture
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title "Multiplayer Tetris Game Online - Simplified Architecture"
LAYOUT_TOP_DOWN()

' External Actors
Person(player1, "Player 1", "User who plays the game")
Person(player2, "Player 2", "User who plays the game")

' Client Platform
System_Ext(client_platform, "Game Client", "Go/Ebiten - Desktop/Web/Mobile")

System_Boundary(tetris_system, "Tetris Game System") {
    ' Single Backend Service
    Container(tetris_server, "Tetris Server", "Go/Gin/WebSocket", "All-in-one: WebSocket, room management, game logic")
    
    ' Single Database
    ContainerDb(redis_cache, "Redis Cache", "Redis", "Game sessions, player data, room data")
}

' Relationships
Rel(player1, client_platform, "Plays game", "Local")
Rel(player2, client_platform, "Plays game", "Local")
Rel(client_platform, tetris_server, "Real-time communication", "WebSocket :8080")
Rel(tetris_server, redis_cache, "Store/retrieve game data", "Redis Protocol")

SHOW_LEGEND()

@enduml
